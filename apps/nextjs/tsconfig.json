{
  "extends": "@critichut/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "paths": {
      "~/*": ["./src/*"],
      "@critichut/ui/*": ["../../packages/ui/src/*"],
      "@critichut/ui": ["../../packages/ui/src/index.ts"],
      "@critichut/api/*": ["../../packages/api/src/*"],
      "@critichut/auth/*": ["../../packages/auth/src/*"],
      "@critichut/db/*": ["../../packages/db/src/*"],
      "@critichut/validators/*": ["../../packages/validators/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
